         <script language="javascript">
function cutimg() 
{
	var img=get_obj("imgurl").value;
	var cw=document.form1.width.value;
	var ch=document.form1.height.value;
	if(cw==''){
		document.form1.width.focus();
		alert("请设置好图片宽度");return false;
	}
	if(ch==''){
		document.form1.height.focus();
		alert("请设置好图片高度");return false;
	}
if(img!=''){
	if(img.indexOf("http://")==-1){
		img="$webdb[www_url]/$webdb[updir]/"+img;
	}
	window.open("cutimg.php?job=cutimg&width="+cw+"&height="+ch+"&srcimg="+img,'',"width=480,height=430")
}else{
	get_obj("imgurl").focus();
	alert('图片地址不存在');
}
}
</script>
